def filter_by_time(df, year, month, day, hour, meridiem, junction=None):
    condition = (
        (df['year'] == year) &
        (df['month'] == month) &
        (df['date'] == day) &
        (df['hour'] == hour) &
        (df['Meridiem'] == meridiem)
    )
    if junction:
        condition &= (df['Junction'] == junction)
    return df[condition]
